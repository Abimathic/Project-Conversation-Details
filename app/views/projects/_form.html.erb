<%= form_with(model: @project, local: true, class: "needs-validation") do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter project name", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :status, class: "form-label" %>
    <%= f.select :status, [["Not_Started", "Not_Started"], ["In Progress", "In_Progress"], ["Completed", "Completed"]], { prompt: "Select Status" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.submit project.new_record? ? "Create Project" : "Update Project", class: "btn btn-primary" %>
    <%= link_to "Cancel", projects_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>

